#include <avr/io.h>
#include <avr/interrupt.h>
#include <stdint.h>
#include <stdbool.h>
#include <util/delay.h>
#include <avr/wdt.h>
#include "DS18B20.h"


void HwInit( void )
{
	//reset watchdog
	wdt_reset();
	//Start watchdog timer with 4s prescaller
	WDTCSR = (1<<WDIE)|(1<<WDE)|(1<<WDP3);
	wdt_enable(WDTO_4S);

	DDRB = 0xFF;
	DDRD = ((1 << SEG_0_PIN) | (1 << SEG_1_PIN) | SWITCH_PIN_MASK | LED_PIN_MASK | USER_PIN_MASK);

	heaterOff();

	sei();
}

